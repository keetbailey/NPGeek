@model IList<Park>
@using Capstone.Web.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Parks</h2>


<table class="table">
    <tr>
        <th>
            Park Name
        </th>
        <th>
            State
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>



    @foreach (var item in Model)
    {
        var parkImage = "/Content/Images/" + item.ParkCode.ToLower() + ".jpg";
        <tr>

            <td> <img src=@parkImage  /> </td>

            <td>
                <a href="@Url.Action("ParkDetail", "Park", new { id = item.ParkCode })">

                    @Html.DisplayFor(modelItem => item.ParkName)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ParkDescription)
            </td>
            <td></td>
        </tr>
    }
</table>
