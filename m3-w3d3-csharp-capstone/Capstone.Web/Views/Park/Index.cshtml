@model IList<Park>
@using Capstone.Web.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<h2 style="text-align:center">
    US National Parks
</h2>

<table class="table">
    <tr>
        <th style="font-size:10px">Click image or name for details!</th>
        <th>
            Park Name
        </th>
        <th>
            State
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        var parkImage = "/Content/Images/" + item.ParkCode.ToLower() + ".jpg";
        <tr>

            <td> <a href="@Url.Action("ParkDetail", "Park", new { id = item.ParkCode })"><img style="max-height:250px; max-width:250px" src=@parkImage /></a> </td>

            <td>
                <a href="@Url.Action("ParkDetail", "Park", new { id = item.ParkCode })">

                    @Html.DisplayFor(modelItem => item.ParkName)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ParkDescription)
            </td>
            <td></td>
        </tr>
    }
</table>
